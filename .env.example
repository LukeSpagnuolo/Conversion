# Django OAuth provider base URL
SITE_URL=http://127.0.0.1:8000

# Local dev server settings
APP_HOST=127.0.0.1
APP_PORT=8050
DEV_MODE=true

# Full public redirect URI — must match the URI registered on the OAuth provider
# For Posit Connect: https://<your-posit-connect-app-url>/redirect
OAUTH_REDIRECT_PATH=https://<your-posit-connect-app-url>/redirect

# OAuth2 credentials — set these in Posit Connect's Vars tab (never commit real values)
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
